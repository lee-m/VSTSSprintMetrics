<div class="card w-100">
    <div class="card-body">
        <select class="form-control form-control-lg" id="team-dropdown">
            <option value="" selected disabled>Loading...</option>
        </select>
        <select class="form-control form-control-lg" id="iteration-dropdown">
            <option value="" selected disabled>No Sprint Selected</option>
        </select>
    </div>
</div>

<div class="card grid-card w-100">
    <div class="card-body grid-card-body p-3">
        <div class="grid-container flex-grow-1">
            <table id="metrics-grid" class="table table-striped table-sm">
                <thead>
                    <tr>
                        <th />
                        <th scope="col" style="width: 60%;">User Story</th>
                        <th scope="col">Development</th>
                        <th scope="col">Testing</th>
                        <th scope="col">Overall</th>
                        <th />
                    </tr>
                </thead>
                <tbody />
            </table>
            <div id="loading-overlay" class="overlay">
                <div class="lds-double-ring">
                    <div></div>
                    <div></div>
                </div>
            </div>
            <div id="no-selection-overlay" class="overlay">
                <b>No Sprint Selected</b>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="all-sprints-metrics-modal" data-keyboard="false" data-backdrop="static" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Loading...</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="chart-container">
                    <div id="chartLoadingOverlay" class="overlay d-flex">
                        <div class="lds-double-ring" id="chartLoadingImage">
                            <div></div>
                            <div></div>
                        </div>
                    </div>
                    <canvas id="chartCanvas" />
                </div>
                <div class="modal-body-stats-container">

                    <b>Estimated Time:</b>
                    <div id="totalEstimatedTimeMetric">N/A</div>

                    <b>Total Time:</b>
                    <div id="totalTimeMetric">N/A</div>

                    <b>Development Time:</b>
                    <div id="devTimeMetric">N/A</div>

                    <b>Rework Time:</b>
                    <div id="reworkTimeMetric">N/A</div>

                    <b>Testing Time:</b>
                    <div id="testingTimeMetric">N/A</div>

                    <b>Number of Bugs:</b>
                    <div id="numBugsMetric">N/A</div>

                    <b>Number of Iterations:</b>
                    <div id="numIterationsMetric">N/A</div>

                    <b>Number of Open Bugs:</b>
                    <div id="numOpenBugsMetric">N/A</div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>